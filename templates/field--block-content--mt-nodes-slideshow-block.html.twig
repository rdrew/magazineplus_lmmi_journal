{#
/**
 * @file
 * Magazine+'s theme override for the block entity refernece field for the tabs powered custom block
 *
 * @see magazineplus_preprocess_field__block_content__mt_fancy_tabs_block()
 */
#}
{{ attach_library('magazineplus/flexslider-nodes-slideshow') }}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'field--mt-nodes-slideshow-block',
    'clearfix',
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'inline' ? 'inline',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% if not label_hidden %}
    <h3{{ title_attributes.addClass(title_classes) }}>{{ label }}</h3>
  {% endif %}
  <div class="row">
    <div class="col-sm-4 col-md-3">
      <div class="nodes-slideshow-navigation flexslider">
        <ul class="slides">
          {% for item in items %}
            <li>
              <a href="#"><span class="title-order">{{ loop.index }}.</span> <span class="title-text">{{ item.content['#node'].title.value }}</span></a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="col-sm-8 col-md-9">
      <div class="nodes-slideshow flexslider">
          <ul class="slides">
            {% for item in items %}
              <li>
                {{ item.content }}
              </li>
            {% endfor %}
          </ul>
      </div>
    </div>
  </div>
</div>
